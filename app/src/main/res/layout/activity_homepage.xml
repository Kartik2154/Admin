<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Homepage">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A0ECF6"
        android:titleMarginStart="30dp"
        app:title="Compare Prices"
        app:titleTextColor="@color/black" />

        <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Categories"
        android:layout_below="@+id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pro1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:background="@drawable/leptop"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Laptop"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/l1"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pro2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/pc"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Computer"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/l2"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pro3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/tv"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TV"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/l1"
        android:layout_margin="25dp"
        android:background="@drawable/corner"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pro4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ac"
            android:contentDescription="TODO" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AC"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/l1"
        android:layout_alignLeft="@+id/l2"
        android:layout_marginTop="25dp"
        android:background="@drawable/corner"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/pro5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/wc"
            android:contentDescription="TODO" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="woshing machin"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/l1"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/l3"
        android:background="@drawable/corner"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/pro6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/oven"
            android:contentDescription="TODO" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Oven"
            android:textSize="20dp"/>
    </LinearLayout>



</RelativeLayout>


    </LinearLayout>